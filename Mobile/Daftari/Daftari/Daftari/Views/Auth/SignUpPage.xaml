                            <ColumnDefinition Width="80*"/>
                            <ColumnDefinition Width="10*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <ImageButton Source="carousel_back_arrow.png"
                                    BackgroundColor="Transparent" 
                                    Margin="15,0,0,0"/>

                        <Label Grid.Column="1" Text="Create an account" 
                                TextColor="#012550" 
                                FontSize="16" 
                                FontFamily="Gotham-Medium"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"/>

                        <ImageButton Grid.Column="2" Source="carousel_back_arrow.png"
                                    BackgroundColor="Transparent" 
                                    Margin="0,0,15,0"/>

                        <Label Grid.Row="1" Grid.Column="1" Text="Step 3 of 4" 
                                TextColor="Red" 
                                FontSize="15" 
                                FontFamily="Gotham-Book"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"/>

                        <!--<StackLayout Grid.Row="2" Grid.ColumnSpan="3" Padding="0,0,0,30">
                            <Image Source="ollietheotter_swim_stand.png"
                                   HeightRequest="250"/>
                        </StackLayout>-->

                    </Grid>
                </RelativeLayout>

                <StackLayout Margin="20,0">
                    <CollectionView ItemsSource="{Binding SwimLevels}"
                                    SelectionMode="Single"                                    
                                    SelectedItem="{Binding SelectedSwimLevel, Mode=TwoWay}"
                                    SelectionChangedCommand="{Binding SwimLevelChangedCommand}"
                                    SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedSwimLevel}"
                                    Margin="0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>

                                    <Label Text="{Binding Name}" 
                                            TextColor="#012550" 
                                            FontSize="18" 
                                            Padding="0,10,0,2"
                                            FontFamily="Gotham-Medium"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center"
                                            HorizontalTextAlignment="Start"/>

                                    <Label Text="{Binding Description}" 
                                            TextColor="#012550" 
                                            FontSize="14" 
                                            Padding="0,5"
                                            FontFamily="Gotham-Book"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center"
                                            HorizontalTextAlignment="Start"/>

                                    <BoxView BackgroundColor="#d9d9d9" HeightRequest="1" VerticalOptions="End" HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </StackLayout>

                <StackLayout Margin="20,0,20,40">
                    <Button Text="Next"
                        BackgroundColor="Red"                        
                        TextColor="White"
                        Margin="0"
                        FontFamily="Gotham-Bold"
                        CornerRadius="30"
                        Clicked="OnSwimLevel_Clicked"/>
                </StackLayout>

            </StackLayout>

            <!--<StackLayout
                    IsVisible="{Binding IsRunning, Mode=OneWay}"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
