                                    Margin="15,0,0,0"/>

                        <Label Grid.Column="1" Text="Sign Up" 
                                TextColor="#012550" 
                                FontSize="18" 
                                FontFamily="Gotham-Medium"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"/>

                        <ImageButton Grid.Column="2" Source="carousel_back_arrow.png"
                                    BackgroundColor="Transparent" 
                                    Margin="0,0,15,0"/>

                        <Label Grid.Row="1" Grid.Column="1" Text="Step 2 of 4" 
                                TextColor="Red" 
                                FontSize="15" 
                                FontFamily="Gotham-Book"
                                VerticalOptions="Center"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"/>

                        <StackLayout Grid.Row="2" Grid.ColumnSpan="3" Padding="0,0,0,30">
                            <Image Source="ollietheotter_swim_stand.png"
                                   HeightRequest="250"/>
                        </StackLayout>

                    </Grid>
                </RelativeLayout>

                <StackLayout Margin="20,0">
                    <Entry x:Name="Name" Placeholder="Name"
                            MaxLength="50"
                            FontSize="18"
                            TextColor="White"
                            PlaceholderColor="White"
                            FontFamily="Gotham-Book"
                            IsSpellCheckEnabled="false"
                            IsTextPredictionEnabled="false">
                    </Entry>

                    <DatePicker x:Name="DOB"
                            FontSize="18"
                            TextColor="White"
                            FontFamily="Gotham-Book">
                    </DatePicker>


                    <Picker x:Name="Gender"
                            Grid.Row="0" Grid.Column="1" Title="Date of birth" 
                            FontSize="18"
                            TextColor="White"
                            TitleColor="White"
                            Margin="0"
                            FontFamily="Gotham-Book" />

                </StackLayout>

                <StackLayout Margin="20,0,20,40">
                    <Button Text="Sign Up"
                        BackgroundColor="White"                        
                        TextColor="#012550"
                        Margin="0"
                        FontFamily="Gotham-Bold"
                        CornerRadius="30"
                        Clicked="OnValidateChild_Clicked"/>
                </StackLayout>

            </StackLayout>

            <!--<StackLayout
                    IsVisible="{Binding IsRunning, Mode=OneWay}"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="Gray" Opacity="0.5">
                <ActivityIndicator
                        IsRunning="{Binding IsRunning, Mode=OneWay}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        Color="Black"/>
            </StackLayout>-->

        </AbsoluteLayout>
    </ContentPage>

    <ContentPage Title="Tab 3" >
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
