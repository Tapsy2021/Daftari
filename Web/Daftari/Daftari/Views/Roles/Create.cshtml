@model Daftari.ViewModel.RoleVM

@section CustomStyles {
}
@{
    ViewBag.Title = "New Role";
}

<h2>New Role</h2>

@using (Html.BeginForm())
{

    <div class="well">
        <fieldset style="margin-left: 20px;margin-right: 20px;">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @if (ViewBag.Message != "")
            {
                <p style="color: red">@ViewBag.Message</p>
            }

            <div class="form-group label-floating">
                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })<br />
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-light" />
                </div>
            </div>
        </fieldset>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}