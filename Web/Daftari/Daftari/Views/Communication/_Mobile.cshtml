@if (this.ViewContext.FormContext == null)
{
    this.ViewContext.FormContext = new FormContext();
}
@model Daftari.SMSHandling.Mobile

@using (Html.BeginCollectionItem("Mobiles"))
{
    <div id="phoneRow" class="contentRow">

        <div class="form-group label-floating">
            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
        </div>

        <a hre id="deleteRow" class="btn btn-danger btn-fab btn-fab-mini deleteRow"><span class="glyphicon glyphicon-trash" style="top: 6px;font-size: large;left: -1px;"></span></a>
    </div>
}