    }

    .nav-item > a {
        font-size: 1.6rem;
        font-weight: 500;
        color: darkslateblue;
    }

    #inputq {
        border-radius: 20px;
        border: 3px solid #1e3565;
        min-width: 300px;
        background-color: transparent;
        color: #1e3565;
        font-weight: bold;
    }

    .search-icon {
        color: #1e3565;
    }

    .hero-section:after {
        background-image: none !important;
    }

    .hero-section {
        padding: 0 !important;
    }
    /*.hero-section {
        background-image: linear-gradient(to bottom,#e8d2a6,#e8d2a6);
    }*/

    .navbar > .container {
        background-image: linear-gradient(to bottom,#e8d2a6,#e8d2a6) !important;
    }

    .star {
        font-size: 20px !important;
    }

    .navbar-dark .navbar-nav .nav-link {
        color: #1e3565 !important;
    }

    #navbarNavDropdown {
        border-bottom: 1px solid gray;
    }

    .tester {
        margin-left: auto;
        margin-right: auto;
    }

    @@media screen and (max-width: 540px) {
        .nav-item > a {
            font-size: 1rem;
            font-weight: 500;
            color: darkslateblue;
        }
        .app-search .form-control {
            height: 33px !important;
        }

        .app-search span.search-icon {
            line-height: 35px !important;
        }

        #inputq {
            min-width: 230px;
        }
    }
</style>
